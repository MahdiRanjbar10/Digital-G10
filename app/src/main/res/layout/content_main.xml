<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/back">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:alpha="0.8"
        app:cardElevation="3dp"
        app:cardCornerRadius="25dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/black" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.esnplus.digitalg10.CustomSpinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:alpha="0.8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="انتخاب دستگاه"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="2dp"
            android:gravity="center"
            android:alpha="0.8"
            android:background="@color/black"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:iconSize="20dp"
            android:id="@+id/bSound"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            app:icon="@drawable/ic_sound"
            app:iconTint="@color/material_button_icon_tint"
            app:backgroundTint="@color/material_button_background_tint"
            android:alpha="0.8"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:iconSize="20dp"
            android:id="@+id/bMute"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            app:icon="@drawable/ic_mute"
            app:iconTint="@color/material_button_icon_tint"
            app:backgroundTint="@color/material_button_background_tint"
            android:alpha="0.8"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="2">

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_off"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:alpha="0.8"
                app:orientation="vertical"
                app:src="@drawable/ic_off"
                app:text="خاموش" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_on"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:alpha="0.8"
                app:orientation="vertical"
                app:src="@drawable/ic_on"
                app:text="روشن" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_half_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_half_on"
                app:text="نیمه فعال" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_stop_siren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:alpha="0.8"
                app:orientation="vertical"
                app:src="@drawable/ic_siren_off"
                app:text="قطع آژیر" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_start_siren"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:alpha="0.8"
                app:orientation="vertical"
                app:src="@drawable/ic_siren"
                app:text="آژیر اضطراری" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_stop_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_stop_alarm"
                app:text="توقف هشدار" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_manage_outs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_outs"
                app:text="کنترل خروجی ها"
                app:textSize="10sp" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_phone_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_phone_list"
                app:text="لیست شماره ها"
                app:textSize="10sp" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_report"
                app:text="گزارش وقایع" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_realize_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_sim"
                app:text="مانده اعتبار" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_add_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_increase_balance"
                app:text="افزایش اعتبار" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_device_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_settings"
                app:text="تنظیمات دستگاه" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_device_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_status"
                app:text="وضعیت دستگاه" />

            <com.esnplus.digitalg10.CardLinearContent
                android:id="@+id/cv_manage_devices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:alpha="0.8"
                app:orientation="horizontal"
                app:src="@drawable/ic_managment"
                app:text="ایجاد و مدیریت دستگاه ها" />

        </GridLayout>

    </ScrollView>

</LinearLayout>