<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:alpha="0.8"
            app:cardElevation="3dp"
            app:cardCornerRadius="25dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@color/black" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvShowSelectedDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="دستگاه انتخابی : 123"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="5dp"
            android:alpha="0.8"
            android:background="@color/black"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:layout_margin="10dp"
        android:layout_gravity="center">

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_change_sms_zone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:alpha="0.8"
            app:orientation="vertical"
            app:src="@drawable/ic_change_sms_zone"
            app:text="تغییر متن پیامک تحریک" />

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_manage_phonelist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:alpha="0.8"
            app:orientation="vertical"
            app:src="@drawable/ic_manage_phonelist"
            app:textSize="10sp"
            app:text="تغییر یا حذف شماره تلفن ها" />

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_change_default_sim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:alpha="0.8"
            app:orientation="vertical"
            app:src="@drawable/ic_default_sim"
            app:text="تغییر سیمکارت پیش فرض" />

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_name_zone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:alpha="0.8"
            app:orientation="vertical"
            app:src="@drawable/ic_zone"
            app:text="نام گذاری زونها" />

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_name_remote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:alpha="0.8"
            app:orientation="vertical"
            app:src="@drawable/ic_remote"
            app:text="نام گذاری ریموتها" />

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_remove_remote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:alpha="0.8"
            app:orientation="vertical"
            app:src="@drawable/ic_remove_remote"
            app:text="حذف ریموت" />

        <com.esnplus.digitalg10.CardLinearContent
            android:id="@+id/cv_manage_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:alpha="0.8"
            app:orientation="horizontal"
            app:src="@drawable/ic_password"
            app:text="مدیریت رمز ورود به نرم افزار" />

    </GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>