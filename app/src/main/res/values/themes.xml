<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigitalG10" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">@color/androidStatusBarColor</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">@color/androidStatusBarColor</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="customMaterialButton" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconSize">20dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">end</item>
        <item name="backgroundTint">@color/material_button_background_tint</item>
    </style>

    <style name="KeypadButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/password_button_back</item>
        <item name="android:textColor">@color/password_button_text_color</item>
    </style>

    <style name="PasswordIndicator">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/pass_circle</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="FilterChip">
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_tick</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipBackgroundColor">@color/chip_back_color</item>
    </style>

    <style name="Theme.DigitalG10.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.DigitalG10.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

</resources>